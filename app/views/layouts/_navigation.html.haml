.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{:data => {:toggle => "collapse", :target => ".nav-collapse"} }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href=>"#"} Pricer
      .nav-collapse
        %ul.nav
          %li= link_to("Главная", root_path)
          %li= link_to("Поиск", searches_path)
          %li= link_to("Справочник", items_path)
          %li= link_to("Связи", links_path)

        %ul.nav.pull-right
          -if user_signed_in?
            #userBlock.userDonation
              .userPic
                =image_tag(current_user.small_user_pic_url)
              = link_to('out', signout_path)
          - else
            %a{:href => "#{signin_path}"}
              =image_tag("vkontakte.png")

        = search_box("navbar-search pull-right")


