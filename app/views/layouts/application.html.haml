!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js', :lang => 'ru' do
  %head
    = render "layouts/head", :stylesheet_partial => "layouts/stylesheets"
  
  %body.bp.two-col{ :class => "#{controller.controller_name}" }
    #container
      %header#header
        = render "layouts/header"
      #sidebar
        %ul
          %li
            = link_to("Главная", root_path)
          %li
            = link_to("Поиск", searches_path)
          %li
            = link_to("Справочник", items_path)
          %li
            = link_to("Связи", links_path)

      #main{ :role => 'main' }
        = render "layouts/flashes"
        = yield
        
      %footer#footer
        = render "layouts/footer"
        
    -# Javascript at the bottom for fast page loading
    = render "layouts/javascripts"
