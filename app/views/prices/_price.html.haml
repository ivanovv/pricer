%tr
  %td{"data-price_id" => price.id}= price.warehouse_code
  %td= link_to(price.original_description, [price.company, price])
  %td= price.price
  - if price.links.size == 0
    %td= link_to "Link", new_link_path(:price_id => price.id)
  - else
    - if defined?(link) && link
      %td= link_to "Unlink", link, :confirm => 'Are you sure?', :method => :delete