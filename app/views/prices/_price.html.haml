%tr
  %td{"data-price_id" => price.id}
    = price.company.name
    %span.small= price.warehouse_code

  %td= link_to(price.original_description, [price.company, price])
  %td= price.price
  - if price.links.size == 0
    %td= button_link_to "Link", new_link_path(:price_id => price.id)
  - else
    - if defined?(link) && link
      %td= danger_button_link_to "Unlink", link, :confirm => 'Are you sure?', :method => :delete