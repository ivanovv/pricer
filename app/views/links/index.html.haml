- title "Связи"

-#Записей: #{@links.total_entries}

%table.table.table-striped.table-bordered.table-condensed
  %thead
    %tr
      %th В справочнике
      %th В прайсе
      %th Человеком?
      %th Балы
      %th{:colspan=>3} Действия
  %tbody
    - for link in @links
      %tr
        %td= link_to link.item, link.item
        %td
          %span.label
            =link.price.company.name
          =link_to link.price, [link.price.company, link.price]
        %td= link.human
        %td= link.score
        %td= link_to 'Показать', link, :class => "btn"
        %td= link_to 'Править', edit_link_path(link), :class => "btn"
        %td= link_to 'Удалить', link, :confirm => 'Are you sure?', :method => :delete, :class => "btn"

= paginate @links

%p= link_to "Новая связь", new_link_path()