$('#items_list').html('<%= escape_javascript(render("items")) %>');
$('#selectable').selectable({
  filter: 'td',
  stop: function() {
      var $td = $(".item.ui-selected");
      if ($td.length>0) {
          $td.parent().children().addClass("ui-selected");
          $("#link_item_id").val($td.attr('id').replace("item_", ""));
      }
      else {
          $("#selectable *").removeClass("ui-selected");
      }
  }
});