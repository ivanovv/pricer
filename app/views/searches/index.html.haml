%h1(style="display:inline") Найденные товары

-# if @prices
  (#{@prices.total_entries})

%br
%br
= form_tag(searches_path, :method => 'get') do
  %p
    = text_field_tag :q, params[:q]
    = submit_tag t(:search), :name => nil

- if @prices
  %table
    %tr
      %th Компания
      %th Складской код
      %th Наименование
      %th Цена
      %th Альтернатив


    - @prices.each do |price|
      %tr
        %td= price.company.name
        %td= price.warehouse_code
        %td= price.original_description
        %td= price.price
        %td= price.cross_prices.count
        %td= link_to 'Подробно', [price.company, price]

  -#= paginate @prices

  %br

    %h1(style="display:inline") Найденные items

    -# if @items
      (#{@items.total_entries})

    %br
    %br

    - if @items
      %table
        %tr
          %th Наименование
          %th Прайсов

        - @items.each do |item|
          %tr
            %td= item.original_description
            %td= item.prices.count
            %td= link_to 'Подробно', [item]

      -#= paginate @items

      %br
