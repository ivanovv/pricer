- if @items && @items.size > 0
  .box
    %h2 Найденые записи из справочника
    %table.table.table-striped.table-bordered.table-condensed
      %tbody#selectable
        %tr
          %th Наименование
          %th Прайсов

          - @items.each do |item|
            %tr
              %td{:id => "#{dom_id(item)}", :class => 'item', :data=>{:item_id => item.id}}
                = link_to(item.original_description, item)
              %td= item.prices.count
- else
  .box
    %h2 Записей не найдено