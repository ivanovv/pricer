- title "Справочник"

-#Записей: #{@items.total_entries}

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th Description
    %th Original description
    %th{:colspan=>3} Actions
    
  - for item in @items
    %tr
      %td= item.description
      %td= item.original_description
      %td= link_to 'Show', item, :class => "btn"
      %td= link_to 'Edit', edit_item_path(item), :class => "btn"
      %td= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete, :class => "btn"

= paginate @items

%p= link_to "New Item", new_item_path()
