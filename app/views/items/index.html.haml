- title "Справочник"

-#Записей: #{@items.total_entries}

=render "shared/sorting"

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th= t('description')
    %th= t('original_description')
    %th= t('actions')
    
  - for item in @items
    %tr
      %td= item.description
      %td= item.original_description

      %td
        .btn-group
          = link_to edit_item_path(item), :class => "btn" do
            %i.icon-pencil
          = link_to item, :confirm => 'Are you sure?', :method => :delete, :class => "btn" do
            %i.icon-trash

= paginate @items

%p= link_to "New Item", new_item_path()
